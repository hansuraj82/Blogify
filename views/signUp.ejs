<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Sign Up</title>

    <style>
        body {
            background: #f2f4f6;
            font-family: 'Segoe UI', sans-serif;
        }

        .signup-container {
            max-width: 500px;
            margin: 80px auto;
            padding: 30px;
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
        }

        .signup-title {
            font-weight: 700;
            color: #007bff;
            text-align: center;
            margin-bottom: 25px;
        }

        .form-label {
            font-weight: 600;
        }

        .btn-primary {
            width: 100%;
            font-weight: 600;
        }

        #preview {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 50%;
            margin: 10px auto;
            display: none;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
        }

        .form-text {
            font-size: 0.85rem;
        }
    </style>
</head>

<body>
    <%- include('./partials/nav') %>

    <div class="container">
        <div class="signup-container">
            <h2 class="signup-title">Create an Account</h2>

            <form action="/user/signup" method="post" enctype="multipart/form-data">
                <!-- Full Name -->
                <div class="mb-3">
                    <label for="fullName" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="fullName" name="fullName" placeholder="John Doe" required>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label for="inputEmail" class="form-label">Email</label>
                    <input type="email" class="form-control" id="inputEmail" name="email" placeholder="you@example.com" required>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Password</label>
                    <input type="password" class="form-control" id="inputPassword" name="password" placeholder="Enter password" required>
                </div>

                <!-- Profile Picture -->
                <div class="mb-3 text-center">
                    <label for="profilePic" class="form-label">Profile Picture</label>
                    <input type="file" class="form-control" id="profilePic" name="profile" onchange="previewImage(event)">
                    <div class="form-text">Optional. JPG, PNG, or GIF (max 2MB).</div>
                    <img id="preview" alt="Profile Preview">
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-4 py-2">Sign Up</button>
                </div>
            </form>

            <p class="mt-3 text-center text-muted">
                Already have an account?
                <a href="/user/signin" class="text-decoration-none text-primary">Sign In here</a>
            </p>
        </div>
    </div>

    <script>
        function previewImage(event) {
            const preview = document.getElementById('preview');
            const file = event.target.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = function () {
                    preview.src = reader.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        }
    </script>

    <%- include('./partials/script') %>
</body>

</html>
